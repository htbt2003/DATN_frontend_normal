useEffect(function () {
  const deviceId = localStorage.getItem('device_id');
  const fetchAPI = async () => {
    try {
      const result = await CartServices.getList(deviceId);
      setListCart(result.ListCart);      
      localStorage.setItem('numberCart', result.ListCart.length);
    }
    catch (error) {
      console.log('wait...')
    }
  }  
  fetchAPI()
}, [reload])
const handleUpdateQty = async (value, key) => {
  const updatedListCart = [...ListCart]; 
  // console.log(updatedListCart)
  updatedListCart[key].quantity = value;
  setListCart(updatedListCart); 
  // const result = await CartServices.decrease(id);
  setReload(Date.now())
};

ListCart.map((item, key) => {
  return(
    <input
    type="number"
    style={{ textAlign: "center" }}
    className="form-control "
    required=""
    placeholder=""
    value={item.quantity}
    onChange={(e) => handleUpdateQty(e.target.value, key)}
  />
  
  )
)}
